<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="8"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:gravity="center_vertical|center"
            android:text="@string/app_name"
            android:textSize="25sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/edit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="right|top"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="@+id/frame"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,MissingConstraints" />

<!--
        <ImageButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:layout_gravity="right|top"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"

            app:srcCompat="?android:attr/actionModeWebSearchDrawable"
            tools:ignore="NewApi" />
-->

    </LinearLayout>

    <FrameLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintTop_toBottomOf="@+id/frame">
        <!--app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintTop_toBottomOf="@+id/frame"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints,Orientation"
        tools:layout_editor_absoluteX="63dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="폴더에 상관없이 모든 파일을 볼 수 있습니다"
                    android:textColor="@color/darkgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/Button1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|left"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="10dp"
                        android:paddingLeft="20dp"
                        android:text="모든 파일"
                        android:textColor="@color/black" />

                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />
                    <!--ca-app-pub-7601094373593837/2209104017 광고-->

                    <!--<Button
                        android:id="@+id/bookmark"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="즐겨찾기"
                        android:textColor="@color/black"
                        app:backgroundTint="@color/white" />-->

                </LinearLayout>
            </LinearLayout>
            <!-- height 48dp width 420dp -->


            <!--            <ListView
            android:id="@+id/folder_list"
            android:layout_width="match_parent"
            android:layout_height="429dp" />-->
            <TextView
                android:id="@+id/folder_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textColor="@color/darkgray" />


            <LinearLayout
                android:id="@id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerview"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/allCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:buttonTint="@color/darkgray"
                    android:focusable="false"
                    android:layout_marginHorizontal="3dp"
                    android:text="모두선택"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    android:layout_marginHorizontal="3dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:layout_editor_absoluteX="207dp"
                    tools:layout_editor_absoluteY="89dp"
                    tools:listitem="@layout/folderrecycler_itemview" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_pin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:src="@drawable/pin_white"
                android:visibility="invisible"
                android:background="@drawable/floating"
                android:backgroundTint="@color/blue"
                app:backgroundTint="@color/white"
                app:borderWidth="3dp"
                app:fabSize="mini"
                app:maxImageSize="20dp"
                app:elevation="2dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:src="@drawable/star"
                android:visibility="invisible"
                android:background="@drawable/floating"
                android:backgroundTint="@color/blue"
                app:backgroundTint="@color/white"
                app:borderWidth="3dp"
                app:fabSize="mini"
                app:maxImageSize="20dp"
                app:elevation="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginVertical="2dp"
                android:src="@drawable/ic_baseline_add_24"
                android:visibility="gone"
                android:background="@drawable/floating"
                android:backgroundTint="@color/blue"
                app:backgroundTint="@color/white"
                app:borderWidth="3dp"
                app:fabSize="normal"
                app:maxImageSize="25dp"
                app:elevation="2dp"/>


        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/trash"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/trash"

            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/selectFolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/newFolder"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/folder_add" />
    </LinearLayout>


