<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="CustomAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    
    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>